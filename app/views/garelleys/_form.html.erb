    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if garelley.persisted? %>
      <%= link_to "Cancel", garelley, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", garelleys_path, class: "btn btn-link" %>
    <% end %>
